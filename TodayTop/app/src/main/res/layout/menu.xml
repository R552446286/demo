<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    >
    <RelativeLayout
        android:id="@+id/not_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorGray"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/call_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/cellphoneicon_login_profile"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/qq_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq_allshare_normal"
                android:layout_gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/weixin_login"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixin_allshare_normal"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐登录更精准"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/already_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorRed"
        android:visibility="gone">
        <ImageView
            android:id="@+id/head_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好你好"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_iv"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">
        <LinearLayout
            android:id="@+id/collected_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_collect"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="收藏"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dayNight_linear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_nighticon"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="模式"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F4F5F6"
        android:layout_marginTop="300dp"></View>
    <TextView
        android:id="@+id/download_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="305dp"
        android:text="离线下载"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F4F5F6"
        android:layout_marginTop="355dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:text="消息通知"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
    <View
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="#F4F5F6"
    android:layout_marginTop="410dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="415dp"
        android:text="用户反馈"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F4F5F6"
        android:layout_marginTop="465dp"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:text="系统设置"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>