<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/type1_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="历史上从未没落的八大姓氏，看看你们谁是玉帝的后裔？"
            android:maxEms="30"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/type1_iv1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/guide_a"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/type1_iv2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/guide_a"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/type1_iv3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@mipmap/guide_a"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/type1_author"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="学点历史"
                android:textSize="10sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/type1_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="2017-03-16 17:56"
                android:textSize="10sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>